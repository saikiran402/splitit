<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coming Soon - Split it</title>
  <style>
    /* Styles for the page */
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
      background-color: #f7f7f7;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      font-size: 40px;
      margin-bottom: 20px;
    }
    p {
      font-size: 18px;
      line-height: 1.5;
      margin-bottom: 30px;
    }
    form {
      display: inline-block;
      margin-bottom: 30px;
    }
    input[type="email"] {
      font-size: 16px;
      padding: 10px;
      width: 300px;
      border: none;
      border-radius: 20px;
      margin-right: 10px;
    }
    input[type="submit"] {
      font-size: 16px;
      padding: 10px 20px;
      border: none;
      border-radius: 20px;
      background-color: #007bff;
      color: #fff;
      cursor: pointer;
    }
    input[type="submit"]:hover {
      background-color: #0062cc;
    }
    .countdown-container {
      display: flex;
      justify-content: space-around;
      margin-top: 30px;
    }
    .countdown-item {
      text-align: center;
      width: 100px;
    }
    .countdown-item span {
      display: block;
      font-size: 30px;
      font-weight: bold;
      color: #007bff;
      margin-bottom: 5px;
    }
    .countdown-item label {
      font-size: 14px;
      color: #777;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    .progress {
      width: 80%;
      margin: 30px auto;
      height: 20px;
      background-color: #f0f0f0;
      border-radius: 10px;
      overflow: hidden;
    }
    .progress-bar {
      width: 50%;
      height: 100%;
      background-color: #007bff;
      border-radius: 10px;
      transition: width 0.3s ease-in-out;
    }
    .social-media-links {
      margin-top: 30px;
    }
    .social-media-links a {
      display: inline-block;
      margin: 0 10px;
      font-size: 24px;
      color: #007bff;
      transition: transform 0.3s ease-in-out;
    }
    .social-media-links a:hover {
      transform: scale(1.2);
    }
    .animation {
      margin-top: 30px;
      animation: pulse 1s infinite;
    }
    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.1);
      }
      100% {
        transform: scale(1);
      }
    }
  </style>
</head>
  <body>
    <div class="container">
      <h1>Coming Soon - Split It</h1>
      <p>We're working hard to bring you an amazing mobile app. Sign up for updates and be the first to know when it's ready!</p>
      <form action="#" method="post">
        <input type="email" name="email" placeholder="Enter your email address">
        <input type="submit" value="Sign up">
      </form>
      <div class="countdown-container">
        <div class="countdown-item">
          <span id="days">30</span>
          <label>days</label>
        </div>
        <div class="countdown-item">
          <span id="hours">12</span>
          <label>hours</label>
        </div>
        <div class="countdown-item">
          <span id="minutes">45</span>
          <label>minutes</label>
        </div>
        <div class="countdown-item">
          <span id="seconds">30</span>
          <label>seconds</label>
        </div>
      </div>
      <div class="progress">
        <div class="progress-bar"></div>
      </div>
      <div class="social-media-links">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
      </div>
      <div class="animation">
        <i class="fas fa-arrow-circle-down fa-3x"></i>
      </div>
    </div>
    <!-- JavaScript to update countdown and progress bar -->
    <script>
      // Set the date we're counting down to
      var countDownDate = new Date("Oct 1, 2023 00:00:00").getTime();
  
      // Update the count down every 1 second
      var x = setInterval(function() {
  
        // Get today's date and time
        var now = new Date().getTime();
  
        // Find the distance between now and the count down date
        var distance = countDownDate - now;
  
        // Time calculations for days, hours, minutes and seconds
        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);
  
        // Display the result in the element with id="demo"
        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
        document.getElementById("minutes").innerHTML = minutes;
        document.getElementById("seconds").innerHTML = seconds;
  
        // Update the progress bar
        var progress = document.querySelector('.progress-bar');
        var progressValue = ((now - (countDownDate - 86400000)) / 86400000) * 100;
        if (progressValue > 100) {
          progress.style.width = '100%';
        } else {
          progress.style.width = progressValue + '%';
        }
  
        // If the count down is finished, write some text
        if (distance < 0) {
          clearInterval(x);
          document.getElementById("days").innerHTML = "0";
          document.getElementById("hours").innerHTML = "0";
          document.getElementById("minutes").innerHTML = "0";
          document.getElementById("seconds").innerHTML = "0";
progress.style.width = '100%';
}
}, 1000);
</script>

</body>
</html>