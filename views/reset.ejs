    margin: 0;
  }
  
  .field-container {
    position: relative;
    max-width: 100%;
    width: 400px;
    margin: 20px 0 40px 0;
  }
  
  .field {
    display: block;
    width: 100%;
    padding: 15px 10px 0;
    border: none;
    font-size: 20px;
    background: rgba(31, 34, 39, 0.8);
    color: #fff;
  }
  
  .field:focus {
    outline: 0;
    border: none;
  }
  
  .floating-label {
    position: absolute;
    pointer-events: none;
    top: 5px;
    left: 10px;
    font-size: 16px;
    opacity: 0;
    color: #fff;
    padding: 0 2px;
    -webkit-transition: 0.2s ease-in-out;
    transition: 0.2s ease-in-out;
    border: none;
  }
  
  .field:valid + .floating-label {
    opacity: 1;
    top: -10px;
    color: #fff;
    border: none;
    z-index: 1;
  }
  
  .field:focus + .floating-label {
    color: #03a9f4;
    border: none;
  }
  
  .field-underline {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: -5px;
    border: 1px solid #9e9e9e;
    z-index: -1;
    padding: 10px 10px 0;
    border-radius: 5px;
  }
  
  .field:focus + .floating-label + .field-underline {
    border-color: #03a9f4;
  }
  
  .button {
    font-size: 15px;
    font-weight: 700;
    background: transparent;
    border: 2px solid #0050fa;
